@model IEnumerable<B403Blog.Models.Makale>
@using B403Blog.Models



<div class="sidebox widget">
    <h3 class="widget-title section-title">Popüler Makaleler</h3>
    <ul class="post-list">
        @foreach (Makale item in Model)
        {
            <li>
                <div class="icon-overlay"> <a href="/Makale/Detay/@item.MakaleId"><img src="@item.Resim.KucukBoyut" alt="" /> </a> </div>
                <div class="meta">
                    <h5><a href="/Makale/Detay/@item.MakaleId">@item.Baslik</a></h5>
                    <em>@item.EklenmeTarihi.Value.ToShortDateString()<span class="comments"><a href="#">@item.Yorums.Count() <i class="icon-chat-1"></i></a></span></em>
                </div>
            </li>
        }


    </ul>
    <!-- /.post-list -->
</div>